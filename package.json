{
  "name": "iot-simulation-platform-root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start:prod": "docker-compose up --build",
    "start:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build iot-backend influxdb mosquitto && npm run dev --workspace=frontend",
    "stop": "docker-compose down"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.16"
  }
}
